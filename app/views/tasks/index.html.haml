%h1 Listing tasks

%table
  %thead
    %tr
      %th Subject
      %th Description
      %th Status
      %th User
      %th Project
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.subject
        %td= task.description
        %td= task.status
        %td= task.user
        %td= task.project
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Task', new_task_path
