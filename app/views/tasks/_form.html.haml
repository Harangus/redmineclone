-# frozen_string_literal: true
= simple_form_for(@task) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :subject
    = f.input :description
    - if @task.persisted?
      = f.input :status, as: :select, collection: Task::STATUSES, prompt: "Choose task state"
    = f.association :user
    = f.association :project
    = f.fields_for :attachments do |attachment_fields|
      = render "attachment_fields", f: attachment_fields
    = link_to_add_association "Add attachment", f, :attachments

  .form-actions
    = f.button :submit, class: "btn btn-primary mb-2"
