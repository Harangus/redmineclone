-# frozen_string_literal: true
= simple_form_for(@task) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :subject
    = f.input :description
    = f.input :status
    = f.association :user
    = f.association :project

  .form-actions
    = f.button :submit
