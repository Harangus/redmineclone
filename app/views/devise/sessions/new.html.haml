.container-fluid.vh-100.d-flex.flex-column.justify-content-center.align-items-center.bg-dark
  .container.bg-darker.rounded-3.p-3
    %h2.mb-4.text-center.text-info Log in

    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-inputs
        .mb-3
          = f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email", class: "form-control bg-dark text-white border-info" },
            label_html: { class: "text-info" }

        .mb-3
          = f.input :password,
            required: false,
            input_html: { autocomplete: "current-password", class: "form-control bg-dark text-white border-info" },
            label_html: { class: "text-info" }

        - if devise_mapping.rememberable?
          .form-check.form-switch.mb-3.text-start
            = f.input :remember_me,
              as: :boolean,
              inline_label: true,
              wrapper_html: { class: "m-0" },
              label_html: { class: "text-light" }

      .form-actions.text-center
        = f.button :submit, "üîê Log in", class: "btn btn-lg btn-info w-100"

    .mt-3.text-center
      = render "devise/shared/links"
